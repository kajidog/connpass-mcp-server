    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@kajidog/connpass-api-client": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.0.0",
