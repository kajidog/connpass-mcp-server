{
  "name": "@kajidog/connpass-mcp-server",
  "version": "0.2.0",
  "description": "MCP server for Connpass API integration",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "connpass-mcp-server": "dist/index.js"
  },
  "scripts": {
    "build": "tsc -b",
    "dev": "tsc -b --watch",
    "start": "node dist/index.js",
