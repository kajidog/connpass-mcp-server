  "devDependencies": {
    "@kajidog/connpass-widgets": "workspace:*",
    "@types/node": "^20.0.0",
    "typescript": "^5.0.0",
    "vitest": "^1.6.0"
  },
  "keywords": ["mcp", "mcp-server", "connpass"],
  "type": "commonjs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kajidog/connpass-in-chatgpt.git",
    "directory": "packages/mcp-server"
  },
  "bugs": {
    "url": "https://github.com/kajidog/connpass-in-chatgpt/issues"
  },
  "homepage": "https://github.com/kajidog/connpass-in-chatgpt#readme",
  "engines": {
    "node": ">=18"
  },
  "files": ["dist", "README.md"],
  "publishConfig": {
    "access": "public"
  },
  "sideEffects": false,
  "exports": {
    ".": "./dist/index.js"
  }
