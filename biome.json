{
  "$schema": "https://biomejs.dev/schemas/1.5.0/schema.json",
  "files": {
    "include": [
      "biome.json",
      "package.json",
      ".github/**/*.yml",
      "packages/mcp-server/package.json",
      "packages/mcp-server/src/**/*.ts",
      "packages/mcp-server/test/**/*.ts",
      "packages/mcp-server/tsconfig.vitest.json",
      "packages/mcp-server/vitest.config.ts"
    ],
    "ignore": [
      "**/dist/**",
      "**/node_modules/**",
      "packages/api-client/**",
      ".changeset/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "enabled": true,
    "rules": {
      "correctness": {
        "recommended": true
      },
      "style": {
        "recommended": false
      },
      "suspicious": {
        "recommended": false
      }
    }
  }
}
